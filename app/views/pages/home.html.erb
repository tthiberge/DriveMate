<div>
 <h1>All the rides</h1>
</div>

<%#Using UI KIT from Le Wagon > trip = ride %>

  <% if current_user %>
    <%= link_to "Add a ride", new_ride_path, class: "btn btn-primary" %>
  <% end %>


  <div class="cards">
    <% @rides.each do |ride| %>
      <%= link_to ride_path(ride) do %>
        <div class="card-trip">
        <div class="container">
          <div class="card-category">
            <%#= image_tag "form-to-img.png" %>
            <div><h2><%= ride.departure_location.capitalize %></h2></div>
            <i class="fa-solid fa-angles-right"></i>
            <div><h2><%= ride.arrival_location.capitalize %></h2></div>
          </div>
          <div class="card-trip-infos">
            <div>
              <h3><strong><%= ride.user.first_name.capitalize %> </strong>propose ce trajet le <%= ride.date.day %> / <%= ride.date.month %> / <%= ride.date.year %></h3>
            <h3 class="card-trip-pricing"><%= ride.seats_available %> <i class="fa-solid fa-person"> </i> </h3></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

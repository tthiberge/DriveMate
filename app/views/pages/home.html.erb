<div>
 <h1>All the rides</h1>
</div>

<%= form_tag(root_path, method: :get) do %>
<div class="input-group"></div>
  <div class="form-outline">
    <label for="site-search" placeholder="Search for destination"> <i class="fa-solid fa-magnifying-glass"></i> </label>
    <%= text_field_tag :query, nil, id: "site-search", class:"form-control", style:"margin-right: 20px" %>
    <%= submit_tag "Search" %>
  </div>
<% end %>



<%#Using UI KIT from Le Wagon > trip = ride %>

  <div class="cards">

    <% if @rides.any? %>


      <% @rides.each do |ride| %>
        <%= link_to ride_path(ride) do %>
          <div class="card-trip">
          <div class="container">
            <div class="card-category">
              <%#= image_tag "form-to-img.png" %>
              <div><h2><%= ride.departure_location.capitalize %></h2></div>
              <i class="fa-solid fa-angles-right"></i>
              <div><h2><%= ride.arrival_location.capitalize %></h2></div>
            </div>
            <div class="card-trip-infos">
              <div>
                <h3><strong><%= ride.user.first_name.capitalize %> </strong>propose ce trajet le <%= ride.date.day %> / <%= ride.date.month %> / <%= ride.date.year %></h3>
              <h3 class="card-trip-pricing"><%= ride.seats_available %> <i class="fa-solid fa-person"> </i> </h3></div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
  </div>

<div class="card-error-message">
  <div>
    <h3 class="error message">Sorry
      <% @user = current_user %>
      <% if current_user %>
        <strong><%= @user.first_name.capitalize %> </strong>,
      <% end %> we don't have a ride for this destination yet but maybe you want to:
    </h3>
  </div>

  <div class="add-ride-button">
    <% if current_user %>
      <%= link_to "Add a ride", new_ride_path, class: "btn btn-primary rounded-pill" %>
    <% end %>
        <% end %>

  </div>
</div>

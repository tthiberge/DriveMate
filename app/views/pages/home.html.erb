<%= form_tag(root_path, method: :get) do %>
<div class="input-group"></div>
  <div class="form-outline">
    <label for="site-search" placeholder="Search for destination"> <i class="fa-solid fa-magnifying-glass"></i> </label>
    <%= text_field_tag :query, nil, id: "site-search", class:"form-control", style:"margin-right: 20px" %>
    <%= submit_tag "Search"%>
  </div>
<% end %>

<div class = "d-flex justify-content-between">
 <h3>All Rides</h3>
  <% if current_user.present? %>
    <%= link_to "Add a ride", new_ride_path, class: "btn btn-dark" %>
  <% end %>
</div>


<div class="cards mt-3">
  <% @rides.each do |ride| %>
    <%= link_to ride_path(ride) do %>
    <div class="card-category d-flex flex-column p-3 m-2">
      <div class="card-ride d-flex justify-content-between flex-grow-1">
        <div class="ride-departure">
          <p><%= ride.departure_location.capitalize %></p>
        </div>
        <div class="ride-s-way align-self-center">
          <i class="fa-solid fa-arrow-right"></i>
        </div>
        <div class="ride-arrival align-self-end">
          <p><%= ride.arrival_location.capitalize %></p>
        </div>
      </div>
      <div class="card-info d-flex justify-content-between">
        <div class="profile align-self-end">
          <% if current_user.present? && current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", crop: :fill, id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <i class="fa-solid fa-user"></i>
          <% end %>
          <%= ride.user.first_name.capitalize %>
        </div>
        <div class="seats-date">
          <p class="nb-seat"><%= ride.seats_available %> <i class="fa-solid fa-person"></i></p>
          <p><%= ride.date.day %>/<%= ride.date.month %>/<%= ride.date.year %></p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>


<div class="card-error-message">
  <div>
    <h3 class="error message">Sorry
      <% @user = current_user %>
      <% if current_user %>
        <strong><%= @user.first_name.capitalize %> </strong>,
      <% end %> we don't have a ride for this destination yet but maybe you want to:
    </h3>
  </div>

  <div class="add-ride-button">
    <% if current_user %>
      <%= link_to "Add a ride", new_ride_path, class: "btn btn-primary rounded-pill" %>
    <% end %>
        <% end %>
  </div>
